<!DOCTYPE html>
<html>
<head>
  <title>Repodepot</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %> 
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="navbar navbar-static-top navbar-inverse">
		<div class="navbar-inner">
			<% if request.fullpath != home_path && request.fullpath != root_path %>
				<%= link_to "RepoDepot", :home, :class => "brand" %>
			<% end %>
			<div class="brand login">
				<%= render "home/login" %>
			</div>
		</div>
	</div>
	
	<div class="container">
		<%= yield %>
	</div>

</body>
</html>
