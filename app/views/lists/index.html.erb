<h3><%= @lists_title %></h3>

<table class="table table-bordered">
	<thead>
		<tr> 
			<th>List Title</th>
			<th>List Owner</th>
			<th>Repository Count</th> 
			<th>Created At</th>
			<th>Updated At</th>
		</tr>
	</thead>
	<tbody>
	<% @lists.each do |list| %>
		<%= render :partial => 'list', :locals => {:list => list } %>
	<% end %>
	</tbody>
</table>

<br/>
<% if current_user %>
	<%= link_to "new list", new_list_path, :class => "btn btn-primary" %>
	<br/>
	<br/>
<% end %>
<div class="nav-actions">
	<% if current_user && request.fullpath != lists_path %>
		<%= link_to "lists by #{current_user.name}", lists_path %>
	<% end %>
	<% if request.fullpath != all_lists_path %>
		<%= link_to "all lists", all_lists_path %>
	<% end %>
</div>