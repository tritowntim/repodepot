			<fieldset id="<%= f.object.object_id %>" data-id="<%= f.object.object_id %>">
					<% if f.object.repository != nil %>
		 		  	<%= render :partial => 'repositories/condensed', :locals => {:repository => f.object.repository, :commentary => f.object.commentary} %>  
		 		  <% else %>
				  	<%= render :partial => 'repositories/search', :locals => {:repository => Repository.new}, :layout => false %>  
		 		  <% end %>
		 		  <%= f.hidden_field :repository_id %> 
		 		  <%= f.text_area :commentary, :class => :commentary %>
		 		  <%= f.hidden_field :ordering, :class => "ordering input-mini" %>
		 		  <%= f.hidden_field :_destroy, :class => "destroy" %>
		 		  <%= link_to "delete", "#", :class => "remove_field" %>
		 		  <br/>
	 		</fieldset>