		 		  <%= f.object.repository ? f.object.repository.full_name : nil %>
		 		  <%= f.text_area :commentary, :class => "commentary" %>
		 		  <%= f.text_field :ordering %>
		 		  <%= f.hidden_field :_destroy %>
		 		  <%= link_to "delete", "#", :class => "remove_field" %>
